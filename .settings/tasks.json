{
    "version": "0.1.0",
    "command": "build.cmd",
    "args": [
    ],
    "tasks": [
        {
            "taskName": "make 32",
            "args": [ "ia32", "all" ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }    
        },
        {
            "taskName": "clean 32",
            "args": [ "ia32", "clean" ]
        },
        {
            "taskName": "make 64",
            "args": [ "ia64", "all" ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }    
        },
        {
            "taskName": "clean 64",
            "args": [ "ia64", "clean" ]
        }
    ]
}